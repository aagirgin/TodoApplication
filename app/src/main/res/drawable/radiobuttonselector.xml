<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/appMainGreen" /> <!-- Change to the desired color when isDone == 1 -->
            <corners android:radius="0dp" />
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Change to the desired border color -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Change to the desired default color -->
            <corners android:radius="0dp" />
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Change to the desired border color -->
        </shape>
    </item>
</selector>